# IriSync - Local Development Environment Variables
# Copy this file to .env.local and fill in your actual values

# ============================================================================
# CRITICAL: NEXTAUTH_SECRET
# ============================================================================
# Generate a secure secret with: openssl rand -base64 32
# This MUST be at least 32 characters for production
NEXTAUTH_SECRET=your-super-secret-nextauth-key-min-32-chars

# ============================================================================
# APPLICATION URLS
# ============================================================================
NEXTAUTH_URL=http://localhost:3000
NEXT_PUBLIC_APP_URL=http://localhost:3000
APP_URL=http://localhost:3000

# ============================================================================
# FIREBASE CLIENT (Get from Firebase Console > Project Settings)
# ============================================================================
NEXT_PUBLIC_FIREBASE_API_KEY=
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=
NEXT_PUBLIC_FIREBASE_DATABASE_URL=
NEXT_PUBLIC_FIREBASE_PROJECT_ID=
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
NEXT_PUBLIC_FIREBASE_APP_ID=
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=

# ============================================================================
# FIREBASE ADMIN (Get from Firebase Console > Project Settings > Service Accounts)
# Download the service account JSON and extract these values:
# ============================================================================
FIREBASE_ADMIN_PROJECT_ID=
FIREBASE_ADMIN_CLIENT_EMAIL=
# For the private key, keep it as one line with \n for newlines:
FIREBASE_ADMIN_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_KEY_HERE\n-----END PRIVATE KEY-----\n"

# ============================================================================
# GOOGLE OAUTH (Get from Google Cloud Console)
# https://console.cloud.google.com/apis/credentials
# ============================================================================
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_OAUTH_CLIENT_ID=

# ============================================================================
# LINKEDIN OAUTH (Get from LinkedIn Developer Portal)
# https://www.linkedin.com/developers/apps
# ============================================================================
LINKEDIN_CLIENT_ID=
LINKEDIN_CLIENT_SECRET=

# ============================================================================
# TWITTER OAUTH (Get from Twitter Developer Portal)
# https://developer.twitter.com/en/portal/projects-and-apps
# ============================================================================
TWITTER_CLIENT_ID=
TWITTER_CLIENT_SECRET=

# ============================================================================
# FACEBOOK OAUTH (Get from Facebook Developers)
# https://developers.facebook.com/apps
# ============================================================================
FACEBOOK_CLIENT_ID=
FACEBOOK_CLIENT_SECRET=

# ============================================================================
# STRIPE (Get from Stripe Dashboard)
# https://dashboard.stripe.com/apikeys
# Use test keys for development (sk_test_... and pk_test_...)
# ============================================================================
STRIPE_SECRET_KEY=
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_PRICE_CREATOR_ID=
STRIPE_PRICE_INFLUENCER_ID=
STRIPE_PRICE_ENTERPRISE_ID=

# ============================================================================
# AI PROVIDERS
# ============================================================================
# OpenAI (Get from https://platform.openai.com/api-keys)
OPENAI_API_KEY=
AI_PROVIDER_TYPE=openai
AI_MODEL_ID=gpt-4-turbo-preview

# Google Gemini (Optional - Get from https://makersuite.google.com/app/apikey)
GEMINI_API_KEY=

# ============================================================================
# UPSTASH REDIS (For rate limiting)
# Get from https://upstash.com (Free tier available)
# 1. Create account at https://upstash.com
# 2. Create a Redis database
# 3. Copy REST URL and TOKEN from database details
# ============================================================================
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# ============================================================================
# EMAIL (SendGrid for production, optional for development)
# Get from https://sendgrid.com/
# ============================================================================
EMAIL_PROVIDER=sendgrid
EMAIL_PRIMARY_PROVIDER=sendgrid
SENDGRID_API_KEY=
EMAIL_FROM=noreply@irisync.com
EMAIL_DEBUG=false

# ============================================================================
# FIGMA (For MCP Integration)
# Get from https://www.figma.com/developers/api#access-tokens
# 1. Go to Figma > Settings > Personal Access Tokens
# 2. Generate a new token
# 3. Copy the token and your file key from the Figma file URL
# ============================================================================
FIGMA_ACCESS_TOKEN=
FIGMA_PERSONAL_ACCESS_TOKEN=
FIGMA_FILE_KEY=

# ============================================================================
# OPTIONAL: Google Cloud
# ============================================================================
GOOGLE_CLOUD_PROJECT_ID=
GOOGLE_CLOUD_STORAGE_BUCKET=

# ============================================================================
# OPTIONAL: Monitoring & Analytics
# ============================================================================
# Sentry (Error Monitoring)
NEXT_PUBLIC_SENTRY_DSN=

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
NODE_ENV=development
APP_NAME=IriSync
SUPPORT_EMAIL=support@irisync.com
LOG_LEVEL=debug
