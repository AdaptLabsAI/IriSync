# Authentication
# IMPORTANT: Set these to your actual deployment URL in production (e.g., https://iri-sync.vercel.app)
# Never hard-code localhost in production code - these env vars ensure dynamic configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=
GOOGLE_OAUTH_CLIENT_ID=

# Firebase (Client)
NEXT_PUBLIC_FIREBASE_API_KEY=
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=
NEXT_PUBLIC_FIREBASE_DATABASE_URL=
NEXT_PUBLIC_FIREBASE_PROJECT_ID=
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
NEXT_PUBLIC_FIREBASE_APP_ID=
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=

# Firebase Admin
FIREBASE_ADMIN_PROJECT_ID=
FIREBASE_ADMIN_CLIENT_EMAIL=
FIREBASE_ADMIN_PRIVATE_KEY=
FIREBASE_ADMIN_PRIVATE_KEY_BASE64=
FIREBASE_ADMIN_SERVICE_ACCOUNT=
FIREBASE_SERVICE_ACCOUNT_KEY=

# Google Cloud
GOOGLE_CLOUD_PROJECT_ID=
GOOGLE_CLOUD_STORAGE_BUCKET=

# AI Services
AI_PROVIDER_TYPE=openai
AI_MODEL_ID=gpt-4
OPENAI_API_KEY=
CLAUDE_API_KEY=
GEN_LANG_API_KEY=

# Stripe
STRIPE_SECRET_KEY=
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_PRICE_CREATOR_ID=
STRIPE_PRICE_INFLUENCER_ID=
STRIPE_PRICE_ENTERPRISE_ID=

# Email
EMAIL_PROVIDER=sendgrid
# EMAIL_PRIMARY_PROVIDER: Controls which email service to use. Options: sendgrid, smtp, development
# In production, this should be set to sendgrid or smtp (never development)
# If not set, the system will auto-select the first configured provider
EMAIL_PRIMARY_PROVIDER=
SENDGRID_API_KEY=
EMAIL_FROM=noreply@irisync.com
# EMAIL_DEBUG: Set to 'true' to enable verbose email logging (default: false in production)
EMAIL_DEBUG=

# Application Settings
# IMPORTANT: In production (Vercel/deployment), set these to your actual URL:
#   - Production: https://iri-sync.vercel.app
#   - Custom domain: https://www.irisync.com
# Never leave localhost URLs in production - API calls will fail!
APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_URL=http://localhost:3000
APP_NAME=IrisAI
SUPPORT_EMAIL=support@irisync.com
LOG_LEVEL=debug
