# Authentication
# IMPORTANT: Set these to your actual deployment URL in production (e.g., https://iri-sync.vercel.app)
# Never hard-code localhost in production code - these env vars ensure dynamic configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=
GOOGLE_OAUTH_CLIENT_ID=
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# OAuth Providers - Social Media Platforms
# Facebook (also used for Instagram)
FACEBOOK_CLIENT_ID=
FACEBOOK_CLIENT_SECRET=

# Twitter/X (OAuth 2.0)
TWITTER_CLIENT_ID=
TWITTER_CLIENT_SECRET=
TWITTER_BEARER_TOKEN=

# LinkedIn
LINKEDIN_CLIENT_ID=
LINKEDIN_CLIENT_SECRET=

# TikTok
TIKTOK_CLIENT_ID=
TIKTOK_CLIENT_SECRET=

# YouTube (uses Google OAuth)
# Uses GOOGLE_CLIENT_ID and GOOGLE_CLIENT_SECRET above

# Pinterest
PINTEREST_CLIENT_ID=
PINTEREST_CLIENT_SECRET=

# Instagram (uses Facebook OAuth)
# Uses FACEBOOK_CLIENT_ID and FACEBOOK_CLIENT_SECRET above

# Firebase (Client)
NEXT_PUBLIC_FIREBASE_API_KEY=
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=
NEXT_PUBLIC_FIREBASE_DATABASE_URL=
NEXT_PUBLIC_FIREBASE_PROJECT_ID=
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
NEXT_PUBLIC_FIREBASE_APP_ID=
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=

# Firebase Admin
FIREBASE_ADMIN_PROJECT_ID=
FIREBASE_ADMIN_CLIENT_EMAIL=
FIREBASE_ADMIN_PRIVATE_KEY=
FIREBASE_ADMIN_PRIVATE_KEY_BASE64=
FIREBASE_ADMIN_SERVICE_ACCOUNT=
FIREBASE_SERVICE_ACCOUNT_KEY=

# Google Cloud
GOOGLE_CLOUD_PROJECT_ID=
GOOGLE_CLOUD_STORAGE_BUCKET=

# AI Services
AI_PROVIDER_TYPE=openai
AI_MODEL_ID=gpt-4
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GOOGLE_AI_API_KEY=

# Stripe
STRIPE_SECRET_KEY=
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_PRICE_CREATOR_ID=
STRIPE_PRICE_INFLUENCER_ID=
STRIPE_PRICE_ENTERPRISE_ID=

# Stripe - Credit Bundles (for AI Toolkit usage)
# Starter: 100 credits for $10.00
NEXT_PUBLIC_STRIPE_STARTER_CREDITS_PRICE_ID=
# Growth: 500 credits for $40.00 (20% savings)
NEXT_PUBLIC_STRIPE_GROWTH_CREDITS_PRICE_ID=
# Pro: 1,000 credits for $70.00 (30% savings)
NEXT_PUBLIC_STRIPE_PRO_CREDITS_PRICE_ID=
# Enterprise: 5,000 credits for $300.00 (40% savings)
NEXT_PUBLIC_STRIPE_ENTERPRISE_CREDITS_PRICE_ID=

# Credit System
# Set to 'true' once Stripe Price IDs are configured to enable credit purchases
# While false, all AI operations are allowed without credit deduction
CREDIT_SYSTEM_ACTIVE=false

# Email
EMAIL_PROVIDER=sendgrid
# EMAIL_PRIMARY_PROVIDER: Controls which email service to use. Options: sendgrid, smtp, development
# In production, this should be set to sendgrid or smtp (never development)
# If not set, the system will auto-select the first configured provider
EMAIL_PRIMARY_PROVIDER=
SENDGRID_API_KEY=
EMAIL_FROM=noreply@irisync.com
# EMAIL_DEBUG: Set to 'true' to enable verbose email logging (default: false in production)
EMAIL_DEBUG=

# Application Settings
# IMPORTANT: In production (Vercel/deployment), set these to your actual URL:
#   - Production: https://iri-sync.vercel.app
#   - Custom domain: https://www.irisync.com
# Never leave localhost URLs in production - API calls will fail!
APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_URL=http://localhost:3000
APP_NAME=IrisAI
SUPPORT_EMAIL=support@irisync.com
LOG_LEVEL=debug

# Redis (Upstash - for rate limiting)
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# Cron Jobs (Production only)
# CRON_SECRET: Secret key for protecting cron endpoints
# Generate with: openssl rand -base64 32
# Required in production to secure scheduled job endpoints
CRON_SECRET=

# Figma (for MCP integration)
FIGMA_ACCESS_TOKEN=
FIGMA_FILE_KEY=
FIGMA_PERSONAL_ACCESS_TOKEN=

# Cron Jobs
# CRON_SECRET: Secret token for authenticating cron job requests
# Generate a secure random string for production (e.g., openssl rand -hex 32)
CRON_SECRET=
