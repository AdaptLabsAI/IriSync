rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Public media can be accessed by anyone
    match /public/{allPaths=**} {
      allow read;
      allow write: if request.auth != null && request.auth.token.role == 'admin';
    }
    
    // User media - each user can access their own files
    match /users/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Organization media - accessible by org members
    match /organizations/{orgId}/{allPaths=**} {
      allow read: if request.auth != null && (
        request.auth.token.orgId == orgId || 
        exists(/databases/$(database)/documents/organizations/$(orgId)/users/$(request.auth.uid))
      );
      
      allow write: if request.auth != null && (
        (request.auth.token.orgId == orgId && request.auth.token.role == 'admin') || 
        (exists(/databases/$(database)/documents/organizations/$(orgId)/users/$(request.auth.uid)) && 
         get(/databases/$(database)/documents/organizations/$(orgId)/users/$(request.auth.uid)).data.role == 'admin')
      );
    }
    
    // Content media - accessible by content creators and admins
    match /content/{contentId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && (
        request.auth.uid == contentId || 
        request.auth.token.role == 'admin'
      );
    }
    
    // By default, deny all access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
} 