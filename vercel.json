{
  "framework": "nextjs",
  "buildCommand": "npm ci --prefer-offline && npm run build",
  "installCommand": "npm ci --prefer-offline",
  "functions": {
    "app/**": {
      "runtime": "nodejs20.x"
    },
    "api/**": {
      "runtime": "nodejs20.x"
    }
  },
  "crons": [
    {
      "path": "/api/cron/token-refresh",
      "schedule": "0 2 * * *"
    },
    {
      "path": "/api/cron/billing-universal",
      "schedule": "0 9 * * *"
    },
    {
      "path": "/api/cron/publish-posts",
      "schedule": "*/5 * * * *"
    },
    {
      "path": "/api/cron/fetch-metrics",
      "schedule": "0 * * * *"
    },
    {
      "path": "/api/cron/fetch-social-listening",
      "schedule": "*/30 * * * *"
    }
  ]
}
